# Environment configuration for MASIS
# Copy this file to .env and fill in your values

OPENAI_API_KEY=your-openai-api-key-here

# Model configuration
PRIMARY_MODEL=gpt-4o                # For complex reasoning (Supervisor, Skeptic)
SECONDARY_MODEL=gpt-4o-mini         # For summarization, extraction (Researcher, Synthesizer drafts)

# RAG configuration
CHROMA_PERSIST_DIR=./data/chroma_db
DOCUMENT_DIR=./data/documents
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Agent configuration
MAX_RESEARCH_ITERATIONS=5           # Prevent infinite research loops
MAX_SKEPTIC_CHALLENGES=3            # Max rounds of critique
CONFIDENCE_THRESHOLD=0.7            # Below this, trigger HITL
RATE_LIMIT_RPM=60                   # Requests per minute cap

# HITL configuration
HITL_ENABLED=true
HITL_TIMEOUT_SECONDS=300            # 5 min timeout for human response
